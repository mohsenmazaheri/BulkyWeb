@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>
    </div>
    @* <div asp-validation-summary="All"></div> *@
    @* It only shows errors related to the Model, not related to the properties *@
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3" row>
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3" row>
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class=" btn btn-primary form-control">Update</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                Back to the List
            </a>
        </div>
    </div>
</form>

@* Adding this partial view, helps handling many of properties validation in the client side, not server side *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}